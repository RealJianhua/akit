<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_normal"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="@dimen/page_paddingleft"
        >

        <Switch
            android:id="@+id/setting_notification_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Mute Notification" 
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" />

        <TextView
            android:id="@+id/setting_blockeduser_textview"
			style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Blocked User"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" />

        <TextView
           style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:id="@+id/help_support_textView"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Help and Feedback"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" />

        <TextView
            android:id="@+id/about_blupe_textView"
            style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="About Blupe"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" />

        <TextView
            android:id="@+id/like_blupe_textView"
            style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Like Blupe on Facebook"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" />

        <TextView
            android:id="@+id/follow_blupe_textView"
            style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Follow Blupe on Twitter"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" />

        <TextView
            android:id="@+id/privacy_textView"
            style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Privacy Policy"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" 
            />

        <TextView
            android:id="@+id/terms_textView"
            style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Terms of Service"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" 
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/devideline" 
            android:layout_marginTop="30dip"
            />
        
        <TextView
            android:id="@+id/logout_textview"
            style="@style/Selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingTop="10dip"
			android:paddingBottom="10dip"
			android:textColor="@color/text_title"
			android:textSize="@dimen/text_list_title"
            android:text="Logout"
            />
        

    </LinearLayout>

</ScrollView>
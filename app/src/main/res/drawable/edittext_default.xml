<?xml version="1.0" encoding="UTF-8"?>
<!-- 根据状态切换图像
	android:state_enabled="false" ：
	android:state_pressed="true" ： 
	android:state_focused="true" ： 焦点聚焦的时候  -->
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="true" android:drawable="@drawable/edittext_normal_focus" />
    <item android:state_focused="true" android:drawable="@drawable/edittext_normal_focus" />
    <item android:state_pressed="true" android:drawable="@drawable/edittext_normal_press" />
    <item android:state_enabled="false" android:drawable="@drawable/edittext_normal_normal" />
    <item android:state_enabled="true" android:drawable="@drawable/edittext_normal_normal" />
</selector>